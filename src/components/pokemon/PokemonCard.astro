---
interface Props {
  url: String;
  name: String;
}

const { url, name } = Astro.props;
const id = url.split("/").at(-2);
const urlImage = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/dream-world/${id}.svg`;
---

<a
href={`/pokemons/${name}`}
 class="card bg-base-100 w-64 shadow-xl my-5 border p-3 text-center">
  <div class="card-body">
    <h3 class="card-title font-bold">{name}</h3>
  </div>
  <figure>
    <img class="w-[150px] py-2" src={urlImage} alt="{name}" />
  </figure>
</a>
