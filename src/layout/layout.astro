---
import { sideInfo } from "../consts/site-info";
import FooterNuevo from "../components/common/FooterNuevo.astro";
import Navbar from "../components/common/Navbar.astro";
interface Props {
  title?: string;
  image?: string;
  description?: string;
}

const {
  title = sideInfo.title,
  description = sideInfo.description,
  image,
} = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- SEO -->
    <meta name="description" content={description} />
    <meta name="author" content={"Santiago Sosa"} />
    <!-- OG METATAGS -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />

    <style>
      @view-transition {
        navigation: auto; /* enabled! */
      }
    </style>
  </head>

  <!--body of my page -->
  <body class="bg-white">
    <header>
      <Navbar />
      <!-- Section Hero -->
    </header>
    <main class="py-16 container mx-auto px-6 md:px-0">
      <slot />
    </main>
    <FooterNuevo />
    <script is:inline src="https://cdn.jsdelivr.net/npm/flowbite@2.4.1/dist/flowbite.min.js"></script>
  </body><!-- component --><!-- Create By Joker Banny -->
</html>
